<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>CrawlServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.CrawlServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MailServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.MailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OpdbServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.OpdbServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TagServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.TagServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SubServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.SubServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>com.newsmths.ide.servlet.InitServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>SearchPage</servlet-name>
		<servlet-class>com.newsmths.ide.SearchPage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TagPage</servlet-name>
		<servlet-class>com.newsmths.ide.TagPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CrawlServlet</servlet-name>
		<url-pattern>/CrawlServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MailServlet</servlet-name>
		<url-pattern>/MailServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OpdbServlet</servlet-name>
		<url-pattern>/OpdbServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/SearchServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TagServlet</servlet-name>
		<url-pattern>/TagServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SubServlet</servlet-name>
		<url-pattern>/SubServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InitServlet</servlet-name>
		<url-pattern>/InitServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchPage</servlet-name>
		<url-pattern>/SearchPage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TagPage</servlet-name>
		<url-pattern>/TagPage</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
